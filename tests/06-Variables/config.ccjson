        "$": [
            "./sub/config.ccjson"
        ],
        "entity": {
            "ourBasePathInMappings": "{{__DIRNAME__}}"
        }
    },
    "@entity": {
        "$inst2": {
            "ourBasePathInInstances": "{{__DIRNAME__}}",
            "ourBasePathInSubInstances": "{{__DIRNAME__}}"
        },
        "$inst3": {
            "ourBasePathInInstances": "{{__DIRNAME__}}",
            "ourBasePathInSubMappings": "{{__DIRNAME__}}",
